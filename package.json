  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/burgan-tech/morph-touch.git"
  },
  "bugs": {
    "url": "https://github.com/burgan-tech/morph-touch/issues"
  },
  "homepage": "https://github.com/burgan-tech/morph-touch#readme",
